if element.type === 'heatmap' || element.type === 'griddata'
  .vue-component-heatmap
else
  .modal-dialog(role='document')
    .modal-content
      form.modal-form(role='form')
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') &times;
          h4.modal-title Chỉnh sửa chú thích
        .modal-body
          if element.type === 'heatmap' || element.type === 'griddata'
            .vue-component-heatmap1111
          else
            - element.label = element.label || {};
            .form-group
              label(for='h-group-name') Tên nhóm
              input#h-group-name.input-sm.form-control(
                type='text', placeholder='Nhập tên nhóm tùy chọn cho phần tử', value=element.group)
            .form-group
              label(for='h-element-label') Nhãn
              input#h-element-label.input-sm.form-control(
                type='text', placeholder='Nhập nhãn tùy chọn cho phần tử', value=element.label.value)
            .form-group
              label(for='h-element-line-width') Độ rộng đường kẻ
              input#h-element-line-width.input-sm.form-control(
                type='number', min=0, step=0.1, value=element.lineWidth)
            .form-group
              label(for='h-element-line-color') Màu đường kẻ
              .input-group.h-colorpicker
                input#h-element-line-color.input-sm.form-control(
                  type='text', value=element.lineColor)
                span.input-group-addon
                  i
            .form-group
              label(for='h-element-fill-color') Màu tô
              .input-group.h-colorpicker
                input#h-element-fill-color.input-sm.form-control(
                  type='text', value=element.fillColor)
                span.input-group-addon
                  i
            .g-validation-failed-message.hidden
      .modal-footer
        button.btn.btn-default(type='button', data-dismiss='modal') Hủy bỏ
        button.btn.btn-primary.h-submit(type='submit') Lưu
